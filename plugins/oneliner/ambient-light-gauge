  if (s) n = Number(s);
  if (n > max) max = n;
  g.show('brightness: ' + n.toFixed(1) + ' lux', Math.sqrt(n) / Math.sqrt(max))
});
process.stdin.on('end', () => {
  g.hide();
  console.log(n.toFixed(1))
})
